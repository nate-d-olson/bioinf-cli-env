# Path to Oh My Zsh installation
export ZSH="$HOME/.oh-my-zsh"

# Powerlevel10k theme
ZSH_THEME="powerlevel10k/powerlevel10k"

# Plugins
plugins=(
  git
  aws
  docker
  zsh-autosuggestions
  zsh-syntax-highlighting
  zsh-completions
  colored-man-pages
  fzf
)

# Load Oh My Zsh
source $ZSH/oh-my-zsh.sh

# Powerlevel10k instant prompt
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh

# Core init
autoload -Uz compinit && compinit

# zoxide
if command -v zoxide &>/dev/null; then
  eval "$(zoxide init zsh)"
fi

# Micromamba
if command -v micromamba &>/dev/null; then
  eval "$(micromamba shell hook -s zsh)"
fi

# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Platform-specific settings
if [ -f ~/.zsh_platform ]; then
  source ~/.zsh_platform
fi

# Work-specific settings
if [ -f ~/.zsh_work ]; then
  source ~/.zsh_work
fi

# Azure OpenAI CLI integration
if [ -f ~/.zsh_azure_llm ]; then
  source ~/.zsh_azure_llm
fi

# AWS prompt
export AWS_CLI_AUTO_PROMPT=on-partial

# Nano enhancements
alias nano='nano -Y syntax -c'

# Modern CLI tools
if command -v eza &>/dev/null; then
  alias ls="eza"
  alias ll="eza -lah"
  alias la="eza -la"
elif command -v exa &>/dev/null; then
  alias ls="exa"
  alias ll="exa -lah"
  alias la="exa -la"
fi

if command -v bat &>/dev/null; then
  alias cat="bat"
elif command -v batcat &>/dev/null; then
  alias cat="batcat"
fi

if command -v fd &>/dev/null; then
  alias find="fd"
elif command -v fdfind &>/dev/null; then
  alias find="fdfind"
fi

# Slurm aliases (only on cluster)
if command -v squeue &>/dev/null; then
  alias sq='squeue -u $USER'
  alias si='sinfo'
  alias sc='scancel'
  alias sj='sacct -j'
  alias srun1='srun --pty -c 1 --mem=8G -t 0-2:00 /bin/bash'
  alias srun8='srun --pty -c 8 --mem=32G -t 0-8:00 /bin/bash'
fi

# Helper functions
mcd() {
  mkdir -p "$1" && cd "$1"
}

# SSH fzf helper
if command -v fzf &>/dev/null && [[ -f ~/.ssh/config ]]; then
  function sshf() { ssh $(grep -oP '(?<=Host )\S+' ~/.ssh/config | fzf); }
  alias ssh=sshf
fi
